<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/habitacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jo.ArduinoInfoSuite.MainActivityMenu">

    <ImageButton
        android:id="@+id/LuisLong"
        android:layout_width="147dp"
        android:layout_height="154dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="212dp"
        android:contentDescription="LuisLong"
        android:foreground="@drawable/luislong"
        android:onClick="Mostrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/habitacion2"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/Hacienda"
        android:layout_width="136dp"
        android:layout_height="148dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="48dp"
        android:contentDescription="Hacienda"
        android:foreground="@drawable/hacienda"
        android:longClickable="false"
        android:onClick="Mostrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cocina"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:text="Casa Luis Long"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LuisLong"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="84dp"
        android:clickable="false"
        android:text="Hacienda"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Hacienda"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:text="HOTELES JALPA DE CANOVAS"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/purple_500"
        android:text="Reservar"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>